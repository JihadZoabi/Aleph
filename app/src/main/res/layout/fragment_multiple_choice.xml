<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_background"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:gravity="center">


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="296dp"
        android:layout_height="451dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/four_pictures_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:text="What is the answer for life, the universe and everything?"
        android:textColor="#795F5F"
        android:textFontWeight="300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/rectangle_1"
        app:layout_constraintStart_toStartOf="@id/rectangle_1"
        app:layout_constraintTop_toTopOf="@id/rectangle_1" />

    <ImageView
        android:id="@+id/sound_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/soundwave"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        android:background="@drawable/rounded_button"
        android:text="Love"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/sound_wave" />

    <Button
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:text="Happiness"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:padding="8dp"
        android:id="@+id/choice2"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/choice1" />

    <Button
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:text="42"
        android:textColor="#fff"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/choice2"
        android:id="@+id/choice3"/>

    <Button
        android:id="@+id/choice4"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:padding="8dp"
        android:background="@drawable/rounded_button"
        android:text="Suffering"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/choice3" />


</androidx.constraintlayout.widget.ConstraintLayout>