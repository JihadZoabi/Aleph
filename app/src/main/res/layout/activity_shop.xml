<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/old_yellow">

    <RelativeLayout
        android:id="@+id/rect_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rect_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Shop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sansita_regular" />

        <RelativeLayout
            android:id="@+id/shop_category_1"
            android:layout_width="285dp"
            android:layout_height="119dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/shop_category"
            android:elevation="4dp">

            <View
                android:layout_width="90dp"
                android:layout_height="119dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shop_cyan_rect" />

            <View
                android:id="@+id/flafel_ic"
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/flafel" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="38dp"
                android:layout_toRightOf="@id/flafel_ic"
                android:fontFamily="@font/sansita_regular"
                android:text="99 Flafels"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="45dp"
                android:fontFamily="@font/sansita_regular"
                android:text="10 NIS"
                android:textSize="20sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/shop_category_2"
            android:layout_width="285dp"
            android:layout_height="119dp"
            android:layout_below="@id/shop_category_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/shop_category"
            android:elevation="4dp">

            <View
                android:layout_width="90dp"
                android:layout_height="119dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shop_cyan_rect" />

            <View
                android:id="@+id/hint_ic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/hint" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="38dp"
                android:layout_toRightOf="@id/hint_ic"
                android:fontFamily="@font/sansita_regular"
                android:text="15 Hints"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="45dp"
                android:fontFamily="@font/sansita_regular"
                android:text="3 Flafel"
                android:textSize="20sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/shop_category_3"
            android:layout_width="285dp"
            android:layout_height="119dp"
            android:layout_below="@id/shop_category_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shop_category"
            android:elevation="4dp">

            <View
                android:layout_width="90dp"
                android:layout_height="119dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shop_cyan_rect" />

            <View
                android:id="@+id/xml_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_xml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="38dp"
                android:layout_toRightOf="@id/xml_icon"
                android:fontFamily="@font/sansita_regular"
                android:text="XP Boost"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="45dp"
                android:fontFamily="@font/sansita_regular"
                android:text="5 Flafel"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
