<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:background="@drawable/iphone_13_p">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:elevation="2dp">

            <TextView
                android:id="@+id/some_id"
                android:layout_width="101dp"
                android:layout_height="53dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="53dp"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:text="30%"
                android:textColor="#000000"
                android:textFontWeight="700"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/your_progre"
                android:layout_width="182dp"
                android:layout_height="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter"
                android:gravity="top"
                android:text="Your progress"
                android:textColor="#795F5F"
                android:textFontWeight="300"
                android:textSize="20sp" />
        </RelativeLayout>


        <View
            android:id="@+id/rectangle_1"
            android:layout_width="4dp"
            android:layout_height="506dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="146dp"
            android:background="@drawable/rectangle_line" />

        <!-- Sport -->


        <View
            android:id="@+id/ellipse_2"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="132dp"
            android:background="@drawable/circle"
            android:elevation="4dp" />

        <View
            android:id="@+id/ellipse_3"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/circle"
            android:backgroundTint="#B681DA"
            android:elevation="4dp" />

        <View
            android:id="@+id/ellipse_4"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/circle"
            android:backgroundTint="#83CEC8"
            android:elevation="4dp" />


        <RelativeLayout
            android:id="@+id/rectangle_6"
            android:layout_width="260dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:background="@drawable/rect_purple"
            android:clickable="true">

            <TextView
                android:id="@+id/sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter"
                android:text="Sport"
                android:textColor="#000000"
                android:textFontWeight="800"
                android:textSize="32sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rectangle_7"
            android:layout_width="260dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:background="@drawable/rect_blue">

            <TextView
                android:id="@+id/Food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter"
                android:text="Food"
                android:textColor="#000000"
                android:textFontWeight="800"
                android:textSize="32sp" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>